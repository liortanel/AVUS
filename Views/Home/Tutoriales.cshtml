@{
    ViewData["Title"] = "Tutoriales";
}

<div class="tutoriales-header">
    <h1><i class="fas fa-graduation-cap"></i> Tutoriales de Apps</h1>
    <p>Aprende a usar las aplicaciones más importantes</p>
</div>

<div class="tutoriales-grid">
    <!-- WhatsApp -->
    <a href="/Home/Tutorial?app=WhatsApp" class="tutorial-card">
        <div class="tutorial-icon">
            <i class="fab fa-whatsapp"></i>
        </div>
        <h3>WhatsApp</h3>
        <p>Aprende a enviar mensajes, hacer llamadas y usar las funciones principales</p>
        <span class="tutorial-arrow"><i class="fas fa-arrow-right"></i></span>
    </a>

    <!-- Instagram -->
    <a href="/Home/Tutorial?app=Instagram" class="tutorial-card">
        <div class="tutorial-icon">
            <i class="fab fa-instagram"></i>
        </div>
        <h3>Instagram</h3>
        <p>Comparte fotos, historias y conecta con tus seres queridos</p>
        <span class="tutorial-arrow"><i class="fas fa-arrow-right"></i></span>
    </a>

    <!-- YouTube -->
    <a href="/Home/Tutorial?app=YouTube" class="tutorial-card">
        <div class="tutorial-icon">
            <i class="fab fa-youtube"></i>
        </div>
        <h3>YouTube</h3>
        <p>Disfruta de videos, música y contenido educativo</p>
        <span class="tutorial-arrow"><i class="fas fa-arrow-right"></i></span>
    </a>

    <!-- Facebook -->
    <a href="/Home/Tutorial?app=Facebook" class="tutorial-card">
        <div class="tutorial-icon">
            <i class="fab fa-facebook"></i>
        </div>
        <h3>Facebook</h3>
        <p>Mantente conectado con familia y amigos</p>
        <span class="tutorial-arrow"><i class="fas fa-arrow-right"></i></span>
    </a>

    <!-- Netflix -->
    <a href="/Home/Tutorial?app=Netflix" class="tutorial-card">
        <div class="tutorial-icon tutorial-icon-netflix">
            <img src="https://img.icons8.com/ios11/512/FFFFFF/netflix--v2.png" alt="Netflix" style="width: 67px; height: auto;"/>
        </div>
        <h3>Netflix</h3>
        <p>Descubre series y películas para disfrutar</p>
        <span class="tutorial-arrow"><i class="fas fa-arrow-right"></i></span>
    </a>

    <!-- Spotify -->
    <a href="/Home/Tutorial?app=Spotify" class="tutorial-card">
        <div class="tutorial-icon">
            <i class="fab fa-spotify"></i>
        </div>
        <h3>Spotify</h3>
        <p>Escucha tu música favorita en cualquier momento</p>
        <span class="tutorial-arrow"><i class="fas fa-arrow-right"></i></span>
    </a>
</div>

