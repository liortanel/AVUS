@{
    ViewData["Title"] = "Familia";
    var familiares = ViewBag.Familiares as List<Familiar> ?? new List<Familiar>();
}

<div class="familia-container">
    <div class="familia-header">
        <h1><i class="fas fa-users"></i> Mis Contactos</h1>
        <p>Gestioná tus contactos de familia y amigos</p>
    </div>

    <div class="familia-content">
        @if (TempData["FamiliaOk"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["FamiliaOk"]
            </div>
        }
        @if (TempData["FamiliaError"] != null)
        {
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> @TempData["FamiliaError"]
            </div>
        }

        <div class="contactos-list">
            @if (familiares.Any())
            {
                @foreach (var familiar in familiares)
                {
                    <div class="contacto-card" data-familiar-id="@familiar.familiar_id">
                        <div class="contacto-info">
                            <div class="contacto-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="contacto-details">
                                <h3>
                                    <span class="contacto-nombre">
                                        @familiar.nombre@if (!string.IsNullOrWhiteSpace(familiar.apellido)) { <text> @familiar.apellido</text> }
                                    </span>
                                    @if (familiar.principal)
                                    {
                                        <span class="badge-principal"><i class="fas fa-star"></i> Principal</span>
                                    }
                                </h3>
                                <p><i class="fas fa-phone"></i> @familiar.numero</p>
                            </div>
                        </div>
                        <div class="contacto-actions" id="actions-@familiar.familiar_id" style="display: none;">
                            <a href="/Home/Chatear?familiarId=@familiar.familiar_id" class="btn-action btn-chat">
                                <i class="fas fa-comment"></i> Chatear
                            </a>
                            <a href="/Home/Llamar?familiarId=@familiar.familiar_id" class="btn-action btn-call">
                                <i class="fas fa-phone"></i> Llamar
                            </a>
                            <form method="post" action="/Home/EliminarFamiliar" class="btn-action-form form-eliminar" data-familiar-id="@familiar.familiar_id" data-nombre="@familiar.nombre @(familiar.apellido ?? "")">
                                <input type="hidden" name="familiarId" value="@familiar.familiar_id" />
                                <button type="submit" class="btn-action btn-delete">
                                    <i class="fas fa-trash"></i> Eliminar
                                </button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-users-slash"></i>
                    <p>No tenés contactos agregados todavía</p>
                    <p class="empty-state-subtitle">Agregá tu primer contacto usando el botón de abajo</p>
                </div>
            }
        </div>

        <div class="agregar-contacto-container">
            <button type="button" class="btn-agregar-contacto" id="btnAgregarContacto">
                <i class="fas fa-plus-circle"></i> Agregar Contacto
            </button>
        </div>
    </div>
</div>

<!-- Modal para agregar contacto -->
<div class="modal-overlay" id="modalAgregar" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h2><i class="fas fa-user-plus"></i> Agregar Contacto</h2>
            <button type="button" class="modal-close" id="btnCerrarModal">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <form method="post" action="/Home/CrearFamiliar" class="modal-form">
            <div class="form-group">
                <label for="nombre">
                    <i class="fas fa-user"></i> Nombre <span class="required">*</span>
                </label>
                <input type="text" id="nombre" name="nombre" required placeholder="Ingresá el nombre" />
            </div>
            <div class="form-group">
                <label for="apellido">
                    <i class="fas fa-user"></i> Apellido
                </label>
                <input type="text" id="apellido" name="apellido" placeholder="Ingresá el apellido (opcional)" />
            </div>
            <div class="form-group">
                <label for="numero">
                    <i class="fas fa-phone"></i> Número <span class="required">*</span>
                </label>
                <input type="tel" id="numero" name="numero" required placeholder="Ej: +54 11 1234-5678" />
            </div>
            <div class="form-group checkbox-group">
                <label class="checkbox-label">
                    <input type="checkbox" id="principal" name="principal" value="true" />
                    <span>Marcar como contacto principal</span>
                </label>
            </div>
            <div class="modal-actions">
                <button type="button" class="btn-cancelar" id="btnCancelar">Cancelar</button>
                <button type="submit" class="btn-guardar">
                    <i class="fas fa-save"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const btnAgregar = document.getElementById('btnAgregarContacto');
            const modal = document.getElementById('modalAgregar');
            const btnCerrar = document.getElementById('btnCerrarModal');
            const btnCancelar = document.getElementById('btnCancelar');
            const contactoCards = document.querySelectorAll('.contacto-card');

            // Abrir modal
            btnAgregar.addEventListener('click', function() {
                modal.style.display = 'flex';
            });

            // Cerrar modal
            function cerrarModal() {
                modal.style.display = 'none';
                document.getElementById('nombre').value = '';
                document.getElementById('apellido').value = '';
                document.getElementById('numero').value = '';
                document.getElementById('principal').checked = false;
            }

            btnCerrar.addEventListener('click', cerrarModal);
            btnCancelar.addEventListener('click', cerrarModal);

            // Cerrar al hacer click fuera del modal
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    cerrarModal();
                }
            });

            // Mostrar/ocultar acciones al hacer click en un contacto
            contactoCards.forEach(card => {
                card.addEventListener('click', function(e) {
                    // No hacer nada si se clickeó en los botones de acción
                    if (e.target.closest('.contacto-actions')) {
                        return;
                    }

                    const familiarId = this.getAttribute('data-familiar-id');
                    const actions = document.getElementById('actions-' + familiarId);
                    const allActions = document.querySelectorAll('.contacto-actions');
                    
                    // Ocultar todas las acciones
                    allActions.forEach(action => {
                        if (action !== actions) {
                            action.style.display = 'none';
                        }
                    });

                    // Mostrar/ocultar las acciones del contacto clickeado
                    if (actions.style.display === 'none' || actions.style.display === '') {
                        actions.style.display = 'flex';
                    } else {
                        actions.style.display = 'none';
                    }
                });
            });

            // Ocultar acciones al hacer click fuera
            document.addEventListener('click', function(e) {
                if (!e.target.closest('.contacto-card')) {
                    document.querySelectorAll('.contacto-actions').forEach(action => {
                        action.style.display = 'none';
                    });
                }
            });

            // Manejar confirmación de eliminación
            const formsEliminar = document.querySelectorAll('.form-eliminar');
            formsEliminar.forEach(form => {
                form.addEventListener('submit', function(e) {
                    const nombre = this.getAttribute('data-nombre') || '';
                    const nombreLimpio = nombre.trim();
                    if (!confirm('¿Estás seguro de que querés eliminar el contacto "' + nombreLimpio + '"?\n\nEsta acción no se puede deshacer.')) {
                        e.preventDefault();
                        return false;
                    }
                });
            });
        });
    </script>
}

